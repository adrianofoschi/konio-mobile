{
  "expo": {
    "name": "Konio",
    "slug": "konio",
    "version": "2.1.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "primaryColor": "#6f00f6",
    "androidStatusBar": {
      "transparent": false
    },
    "ios": {
      "config": {
        "usesNonExemptEncryption": false
      },
      "supportsTablet": false,
      "bundleIdentifier": "konio.io",
      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "cover",
        "backgroundColor": "#7000f6"
      },
      "appStoreUrl": "https://apps.apple.com/app/konio/id6453561342",
      "buildNumber": "20"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "konio.io",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "konio"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        },
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "wc"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "cover",
        "backgroundColor": "#7000f6"
      },
      "playStoreUrl": "https://play.google.com/store/apps/details?id=konio.io",
      "versionCode": 20
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "ec18a997-137d-4eac-8c24-53c14f4375f7"
      }
    },
    "plugins": [
      "expo-localization",
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Konio wants to access the camera to allow you to scan QRCodes. You can scan the recipient's wallet QRCode to obtain their address for sending cryptocurrencies and avoid manual entry. Additionally, you can use the QRCode to quickly connect your wallet to a WEB3 application supporting WalletConnect protocol."
        }
      ]
    ]
  }
}
